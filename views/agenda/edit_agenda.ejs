

<link rel="stylesheet" href="http://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">	
<link rel="stylesheet" href="/assets/jquery.tagsinput-revisited.css" />

<link href="/tag/jquery.flexdatalist.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/css/selectize.bootstrap3.min.css" integrity="sha256-ze/OEYGcFbPRmvCnrSeKbRTtjG4vGLHXgOqsyLFTRjg=" crossorigin="anonymous" />

<form class="form_custom" id="" method="post" action="/update-agenda/<%=data._id %>/<%=event_id%>">
  <div class="adiminBodyContent">
    <!-- Start Page Title Header Starts-->
      <div class="headerTitle">
          <h2>Edit Agenda</h2>    
          <% if(typeof errors !== 'undefined' && typeof errors.message !== 'undefined') { %>
            <p class = "alert alert-danger ml15 mr15 text-center"><%- errors.message %></p>
         <% } %>  
         <% if(typeof errors !== 'undefined' && typeof errors.msg !== 'undefined') { %>
            <p class = "alert alert-success ml15 mr15 text-center"><%- errors.msg %></p>
         <% } %>
      </div>
        <!-- End Page Title Header Ends-->
      <div class="midContentRightBar addSessionBlock">
      <div class="meddleContentSec agendaContentInfo">
        <div class="eventInfoBox">
            <div class="infoBoxContent">
              <div class="boxContentRow">
                <span class="infoTitle">Agenda Type</span>
                <div class="infoBoxData">
                  <select name="agenda_type" id="agenda_type" class="form-control" dir="rtl">
                    <option value="">Select type</option>  
                    <option value="normal">Normal Agenda</option>
                    <option value="video">Video Room</option>
                  </select>
                    <% if(typeof errors !== 'undefined' && typeof errors.agenda_type !== 'undefined') { %>
                      <p class = "error"><%- errors["agenda_type"] %></p>
                  <% } %> 
                </div>
            </div>
                <div class="boxContentRow">
                    <span class="infoTitle">Agenda Title</span>
                    <div class="infoBoxData">
                        <input type="text" class="form-control" placeholder="Enter agenda title" name="title" id="title" value="<%=data.title %>">
                        <% if(typeof errors !== 'undefined' && typeof errors.title !== 'undefined') { %>
                          <p class = "error"><%- errors["title"] %></p>
                      <% } %> 
                    </div>
                </div>
                <div class="boxContentRow">
                    <span class="infoTitle">Agenda Category</span>
                    <div class="infoBoxData">
                        <div class="form-group">
                          <select name="agenda_category" id="agenda_category"  class="form-control"  dir="rtl">
                            <option value="">Enter agenda category</option>
                            <% agenda_data.map((offer,i) => { %>
                              <option  value="<%= offer._id %>"><%= offer.category %></option>
                              <% }) %>
                          </select>
                          <% if(typeof errors !== 'undefined' && typeof errors.agenda_category !== 'undefined') { %>
                            <p class = "error"><%- errors["agenda_category"] %></p>
                        <% } %> 
                        </div>
                    </div>
                </div>
                <div class="boxContentRow">
                    <span class="infoTitle">Agenda Date</span>
                    <div class="infoBoxData">
                        <input type="date" class="form-control" placeholder="Select agenda date"  name="agenda_date" id="agenda_date" value="<%=moment.unix(data.agenda_date).format('YYYY-MM-DD') %>">
                        <% if(typeof errors !== 'undefined' && typeof errors.agenda_date !== 'undefined') { %>
                          <p class = "error"><%- errors["agenda_date"] %></p>
                      <% } %> 
                       
                    </div>
                </div>
                <div class="boxContentRow">
                    <span class="infoTitle">Start Time</span>
                    <div class="infoBoxData">
                        <input type="time" class="form-control" placeholder="Select start time" name="start_time" id="start_time" value="<%=data.start_time %>">
                        <% if(typeof errors !== 'undefined' && typeof errors.start_time !== 'undefined') { %>
                          <p class = "error"><%- errors["start_time"] %></p>
                      <% } %> 
                    </div>
                </div>
                <div class="boxContentRow">
                    <span class="infoTitle">End Time</span>
                    <div class="infoBoxData">
                        <input type="time" class="form-control" placeholder="Select end time" name="end_time" id="end_time" value="<%=data.end_time %>">
                        <% if(typeof errors !== 'undefined' && typeof errors.end_time !== 'undefined') { %>
                          <p class = "error"><%- errors["end_time"] %></p>
                      <% } %> 
                    </div>
                </div>
                <div class="boxContentRow">
                    <span class="infoTitle">Time Zone</span>
                    <div class="infoBoxData">
                        <!-- <input type="text" class="form-control"  placeholder="Select time zone" name="time_zone" id="time_zone" value="<%=data.time_zone %>"> -->
                        <select name="time_zone" id="time_zone" class="form-control" dir="rtl">
                          <% timezones.map((offer,i) => { %>
                            <option  value="<%= offer._id %>"><%= offer.timezone %></option>
                            <% }) %>
                        </select>
                        <% if(typeof errors !== 'undefined' && typeof errors.time_zone !== 'undefined') { %>
                          <p class = "error"><%- errors["time_zone"] %></p>
                      <% } %> 
                    </div>
                </div>
                <div class="boxContentRow">
                    <span class="infoTitle">Tags</span>
                    <div class="infoBoxData">
                        <input type="text" class="form-control tags" placeholder="Enter Tags" name="tags" id="form-tags-1" value="<%=data.tags %>">
                      
                        <% if(typeof errors !== 'undefined' && typeof errors.tags !== 'undefined') { %>
                          <p class = "error"><%- errors["tags"] %></p>
                      <% } %> 
                    </div>
                </div>
                <div class="boxContentRow">
                  <span class="infoTitle">Featured</span>
                  <div class="infoBoxData">
                    <select name="featured" id="featured" class="form-control" dir="rtl">
                      <option value="">Select</option>  
                      <option value="Yes">Yes</option>
                      <option value="No">No</option>
                    </select>
                      <% if(typeof errors !== 'undefined' && typeof errors.featured !== 'undefined') { %>
                        <p class = "error"><%- errors["featured"] %></p>
                    <% } %> 
                  </div>
                </div>
            </div>
        </div>
        <div class="eventInfoBox">
            <div class="infoBoxTitle">
                <h3>Choose Speaker</h3>
            </div>
            <div class="infoBoxContent chooseSpeaker">
                <div class="boxContentRow">
                    <div class="infoBoxData">
                      <select name="speakers" id="speakers" class="form-control"  multiple="multiple" style="display: none;">
                        <% speaker_data.forEach(function(offer){ %>
                          <% $i = 0; %>
                          <% data.speakers.forEach(function(val){ %>
                           
                            <% if(JSON.stringify(offer._id) == JSON.stringify(val)){
                              $i = 1;
                              %>
                          <option selected value="<%= offer._id %>"><%= offer.first_name+' '+offer.last_name %></option>
                          <% }  %>
                          <% }) %>
                          <%    if($i != 1) { %>
                          <option  value="<%= offer._id %>"><%= offer.first_name+' '+offer.last_name %></option>
                          <% } %>
                          <% }) %>
                      </select>
                        <% if(typeof errors !== 'undefined' && typeof errors.speakers !== 'undefined') { %>
                          <p class = "error"><%- errors["speakers"] %></p>
                      <% } %> 
                    </div>
                </div>
            </div>
        </div>
      </div>
        <!-- Start Session Description section -->
            <div class="eventInfoBox">
                <div class="infoBoxTitle">
                    <h3>Agenda Description</h3>
                </div>
                <div class="infoBoxContent">
                    <div class="boxContentTextArea">
                        <div class="infoBoxData">
                            <textarea class="form-control" rows="7" placeholder="Enter agenda description" name="description" id="description" ><%=data.description %></textarea>
                            <% if(typeof errors !== 'undefined' && typeof errors.description !== 'undefined') { %>
                              <p class = "error"><%- errors["description"] %></p>
                          <% } %> 
                        </div>
                    </div>
                </div>
            </div>
          <!-- End Session Description section -->
          <!-- Add Speaker Image section -->
       <div class="addEventImgSec">
        <div class="infoBoxTitle">
            <h3>Agenda Box Image</h3>
        </div>
          <div class="addEventImg addSpeakerImg">
              <div class="addEvntImgColl addEvntImg">
                <div class="addEImg">
                  <input type="file" id="myFile" class="upload-img" name="image"  accept="image/*"> 

                  <input type="hidden" class="image_upload" name="box_image" value="<%=data.box_image %>"/>
                  <div class="addNewEvntImg">
                      <h4>Box images</h4>
                      <img src="/assets/images/navIcon/addImg.png" />
                  </div>
                 
              </div>
            </div>
            <div class="addEvntImgColl">
              <div class="updateEventImg">
                <img class="display_img" src="/uploads/<%=data.box_image %>" />
                  <!-- <span class="itemTrash"><img src="/assets/images/navIcon/trash.png" /></span> -->
              </div>
            </div>
            <% if(typeof errors !== 'undefined' && typeof errors.box_image !== 'undefined') { %>
              <p class = "error"><%- errors["box_image"] %></p>
          <% } %> 
          </div>
      </div>
      <!-- End Images section -->
          <!-- Start upload document section -->
          <div class="addEventImgSec">
            <div class="infoBoxTitle">
                <h3>Add Agenda Document’s</h3>
            </div>
              <div class="addEventImg addDocumentRow">
                  <div class="addEvntImgColl addEvntImg">
                    <div class="addEImg">
                        <input type="file" id="myFile" name="filename" name="image[]" class="multiple_files" multiple accept=".xlsx,.xls,.doc,.docx,.ppt,.pptx,.txt,.pdf"> 
                        <div class="addNewEvntImg">
                            <h4>Add Document</h4>
                            <img src="/assets/images/navIcon/documentUpload.png" />
                        </div>
                    </div>
                  </div>
                  <div class="uoloadDocumentsSec">
                      <div class="filesuploadRow">
                        <% data.docs.map((offer,i) => { %>
                        <div class='filesupload'><div class='documentUpdate documentPDF'><div class='documentType'><img src='/assets/images/navIcon/docIcon.png' /></div><div class='documentText'><h4><%=offer%></h4></div><div class='downDelete'><a target='_blank' href="/uploads/<%=offer%>" download><span class='fileDownload'><i class='fa fa-download'></i></span></a><span class='fileDelete'><i class='fa fa-trash'></i></span></div></div><input type='hidden' class='file_upload' name='file_data' value="<%=offer%>"/></div>
                        <% }) %>
                      </div>
                     
                  </div>
                  <% if(typeof errors !== 'undefined' && typeof errors.file_data !== 'undefined') { %>
                    <p class = "error"><%- errors["file_data"] %></p>
                <% } %> 
              </div>
          </div>
          <!-- End upload document section -->
          <!-- Add Images section -->
    <div class="addEventImgSec">
      <div class="infoBoxTitle">
          <h3>Add Agenda Images</h3>
      </div>
        <div class="addEventImg">
            <div class="addEvntImgColl addEvntImg">
              <div class="addEImg">
                  <input type="file" id="myFile" name="image[]" class="multiple_images" multiple accept="image/*"> 
                  <div class="image_hidden"></div>
                  <div class="addNewEvntImg">
                      <h4>Add Images</h4>
                      <img src="/assets/images/navIcon/addImg.png" />
                  </div>
              </div>
            </div>
            <% data.images.map((offer,i) => { %>
              <div class="addEvntImgColl">
                <div class="updateEventImg">
                    <img src="/uploads/<%=offer %>" />
                    <span class="itemTrash"><img src="/assets/images/navIcon/trash.png" /></span>
                    <input type="hidden" class="image_upload" name="image_data" value="<%=offer %>"/>
                </div>
              </div>
              <% }) %>
            <div class="image_display"></div>
            <% if(typeof errors !== 'undefined' && typeof errors.image_data !== 'undefined') { %>
              <p class = "error"><%- errors["image_data"] %></p>
          <% } %> 
            
        </div>
    </div>
    <!-- End Images section -->
    <!-- Add video section -->
    <div class="addEventImgSec">
      <div class="infoBoxTitle">
          <h3>Add Agenda Videos</h3>
      </div>
        <div class="addEventImg">
            <div class="addEvntImgColl addEvntImg">
              <div class="addEImg">
                  <input type="file" id="myFile" name="image[]" class="multiple_videos" multiple accept="video/mp4"> 
                  <div class="video_hidden"></div>
                  <div class="addNewEvntImg">
                      <h4>Add Video</h4>
                      <img src="/assets/images/navIcon/addImg.png" />
                  </div>
              </div>
            </div>  
            <% data.videos.map((offer,i) => { %>
              <div class="addEvntImgColl">
                <div class="addEventVideoSec"> 
                  <video class="eventVideo" id="myvid">
                    <source src="/uploads/<%=offer %>" type="video/mp4">
                    Your browser does not support HTML5 video.
                  </video>
                    <button class="playpause" id="vidbutton"></button> 
                    <span class="itemTrash"><img src="/assets/images/navIcon/trash.png" /></span>
                    <input type="hidden" class="video_upload" name="video_data" value="<%=offer %>"/>
                </div>
              </div>
              <% }) %>
            <div class="video_display"></div>
            
            <% if(typeof errors !== 'undefined' && typeof errors.video_data !== 'undefined') { %>
              <p class = "error"><%- errors["video_data"] %></p>
          <% } %> 
        </div>
    </div>
    <!-- End Add video section -->
        </div>
      <!-- Submit Button -->
      <div class="adminSubmitBtn">
          <button type="submit" class="btn btn-primary adminPageBtn">Update Agenda</button>
      </div>
      <!-- Submit Button -->
  </div>
</form>
<script src="/assets/js/jquery-3.5.1.min.js"></script>   
<script>


  $(function() {
  

    var temp1="<%=data.agenda_type %>"; 
    $("#agenda_type").val(temp1);
    var temp2="<%=data.agenda_category %>"; 
    $("#agenda_category").val(temp2);
    var temp3="<%=data.lounge_type %>"; 
    $("#lounge_type").val(temp3);
    var temp4="<%=data.time_zone %>"; 
    $("#time_zone").val(temp4);
    var temp5="<%=data.featured %>"; 
    $("#featured").val(temp5);
  });
  </script>